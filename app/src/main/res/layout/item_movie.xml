<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_blue_grey"
    >

    <com.github.jupittar.commlib.custom.AspectRatioImageView
        android:id="@+id/item_movie_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:background="@drawable/clickable_item_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_large"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <com.github.jupittar.commlib.custom.LobsterTextView
            android:textSize="16sp"
            android:id="@+id/item_movie_title"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.jupittar.commlib.custom.LobsterTextView
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:id="@+id/cate_time_tv"
            android:layout_below="@id/item_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>